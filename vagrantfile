VAGRANTFILE_API_VERSION = "2"
GO.REQUIRED_VERSION =  "1.8.1"
# Update apt and get dependencies
sudo apt-get update
sudo apt-get install -y golang-go
SCRIPT
$golangUT = <<SCRIPT
cd /opt/gopath/src/github.com/sivarmdinesh/golangUT
# Install dependencies required for Development
bash buildscripts/install_go.sh
# CD into the golangUT working directory when we login to the VM
grep "cd /opt/gopath/src/github.com/sivarmdinesh/golangUT" /home/vagrant/.profile || \
  echo "cd /opt/gopath/src/github.com/sivarmdinesh/golangUT" >> /home/vagrant/.profile
   config.vm.provision "shell", privileged: true, inline: $installScript
end
